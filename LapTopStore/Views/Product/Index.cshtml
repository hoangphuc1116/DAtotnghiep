            </div>
        </div>
    </div>
</div>

<!-- ...:::: Start Shop Section:::... -->
<div class="shop-section py-5">
    <div class="container">
        <div class="row">
            <!-- Sidebar Filter -->
            <div class="col-lg-3 mb-4">
                <div class="sidebar-wrapper">
                    <form method="get" asp-controller="Product" asp-action="Index">
                        <!-- Search Box -->
                        <div class="sidebar-single-widget mb-4">
                            <div class="sidebar-widget-header">
                                <h6 class="sidebar-title">Tìm kiếm</h6>
                            </div>
                            <div class="sidebar-widget-content">
                                <div class="search-box d-flex">
                                    <input class="form-control search-input" type="search" placeholder="Tìm kiếm sản phẩm..." name="search" value="@ViewData["Search"]">
                                    <button class="btn btn-search" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>

                        @await Component.InvokeAsync("MenuBrand")
                        @await Component.InvokeAsync("MenuCategory")

                        <!-- Gender Filter -->
                        <div class="sidebar-single-widget mb-4">
                            <div class="sidebar-widget-header">
                                <h6 class="sidebar-title">Giới tính</h6>
                            </div>
                            <div class="sidebar-widget-content">
                                <div class="filter-options">
                                    <div class="form-check mb-2">
                                        <input type="checkbox" class="form-check-input" name="gender" value="1" id="genderMale">
                                        <label class="form-check-label" for="genderMale">Nam</label>
                                    </div>
                                    <div class="form-check mb-2">
                                        <input type="checkbox" class="form-check-input" name="gender" value="2" id="genderFemale">
                                        <label class="form-check-label" for="genderFemale">Nữ</label>
                                    </div>
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" name="gender" value="3" id="genderUnisex">
                                        <label class="form-check-label" for="genderUnisex">Unisex</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Price Filter -->
                        <div class="sidebar-single-widget mb-4">
                            <div class="sidebar-widget-header">
                                <h6 class="sidebar-title">Lọc theo giá</h6>
                            </div>
                            <div class="sidebar-widget-content">
                                <div class="price-filter">
                                    <div class="mb-3">
                                        <label for="minPrice" class="form-label">Giá tối thiểu:</label>
                                        <input type="number" id="minPrice" name="minPrice" class="form-control" placeholder="0" step="100000" min="0">
                                    </div>
                                    <div class="mb-3">
                                        <label for="maxPrice" class="form-label">Giá tối đa:</label>
                                        <input type="number" id="maxPrice" name="maxPrice" class="form-control" placeholder="50000000" step="100000" min="0">
                                    </div>
                                    <button type="submit" class="btn btn-golden w-100">
                                        <i class="fa fa-filter me-2"></i>Lọc
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Product Grid -->
            <div class="col-lg-9">
                <div class="products-header mb-4">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <h5 class="products-count">Hiển thị @Model.SanPhams.Count() sản phẩm</h5>
                        </div>
                        <div class="col-md-6">
                            <div class="sort-options d-flex justify-content-end">
                                <select class="form-select sort-select" style="width: auto;">
                                    <option>Sắp xếp theo</option>
                                    <option value="price-asc">Giá tăng dần</option>
                                    <option value="price-desc">Giá giảm dần</option>
                                    <option value="name-asc">Tên A-Z</option>
                                    <option value="name-desc">Tên Z-A</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="products-grid">
                    <div class="row g-4">
                        @foreach (var item in Model.SanPhams)
                        {
                            <div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="product-card h-100">
                                    <div class="product-image-wrapper">
                                        <a asp-controller="Product" asp-action="ProductDetail" asp-route-slug="@item.Slug" class="product-image-link">
                                            <img class="product-image" src="@Url.Content(item.Image)" alt="@item.ProductName" onerror="this.src='/images/default-image.jpg';">
                                        </a>
                                        @if (item.PromotionPrice.HasValue && item.DiscountPercent.HasValue)
                                        {
                                            <span class="discount-badge">-@item.DiscountPercent%</span>
                                        }
                                        <div class="product-actions">
                                            <button class="btn btn-action add-to-cart" data-slug="@item.Slug" data-quantity="1" title="Thêm vào giỏ">
                                                <i class="fa fa-shopping-cart"></i>
                                            </button>
                                            <button class="btn btn-action" title="Xem nhanh">
                                                <i class="fa fa-eye"></i>
                                            </button>
                                            <button class="btn btn-action" title="Yêu thích">
                                                <i class="fa fa-heart-o"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="product-info">
                                        <div class="product-rating mb-2">
                                            <div class="rating-stars">
                                                @{
                                                    bool hasHalfStar = (item.ProductRating - (int)item.ProductRating) >= 0.4;
                                                }
                                                @if (item.ProductRating == 0)
                                                {
                                                    for (int i = 1; i <= 5; i++)
                                                    {
                                                        <i class="fa fa-star text-muted"></i>
                                                    }
                                                }
                                                else
                                                {
                                                    @for (int i = 1; i <= (int)item.ProductRating; i++)
                                                    {
                                                        <i class="fa fa-star text-warning"></i>
                                                    }
                                                    @if ((int)item.ProductRating < 5 && hasHalfStar)
                                                    {
                                                        <i class="fa fa-star-half-o text-warning"></i>
                                                    }
                                                    @for (int i = (int)item.ProductRating + (hasHalfStar ? 1 : 0); i < 5; i++)
                                                    {
                                                        <i class="fa fa-star text-muted"></i>
                                                    }
                                                }
                                            </div>
                                            <span class="rating-count">(@item.TotalRating)</span>
                                        </div>
                                        <h6 class="product-name">
                                            <a asp-controller="Product" asp-action="ProductDetail" asp-route-slug="@item.Slug">
                                                @item.ProductName
                                            </a>
                                        </h6>
                                        <div class="product-price">
                                            @if (item.PromotionPrice.HasValue && item.DiscountPercent.HasValue)
                                            {
                                                <span class="current-price">@String.Format(new CultureInfo("vi-VN"), "{0:C}", item.PromotionPrice)</span>
                                                <span class="original-price">@String.Format(new CultureInfo("vi-VN"), "{0:C}", item.Price)</span>
                                            }
                                            else
                                            {
                                                <span class="current-price">@String.Format(new CultureInfo("vi-VN"), "{0:C}", item.Price)</span>
                                            }
                                        </div>
                                        <p class="product-description">@item.ShortDescription</p>
                                        <button class="btn btn-primary add-to-cart-btn w-100" data-slug="@item.Slug" data-quantity="1">
                                            <i class="fa fa-shopping-cart me-2"></i>Thêm vào giỏ
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <div class="pagination-wrapper mt-5">
                        <nav aria-label="Product pagination">
                            <ul class="pagination justify-content-center">
                                @if (Model.CurrentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })">
                                            <i class="fa fa-chevron-left"></i>
                                        </a>
                                    </li>
                                }
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                        <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                                    </li>
                                }
                                @if (Model.CurrentPage < Model.TotalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })">
                                            <i class="fa fa-chevron-right"></i>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </nav>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Initialize main banner slider
        var mainBannerSlider = new Swiper('.main-banner-slider', {
            slidesPerView: 1,
            effect: "fade",
            speed: 1500,
            loop: true,
            autoplay: {
                delay: 6000,
                disableOnInteraction: false,
            },
            pagination: {
                el: '.main-banner-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '.main-banner-next',
                prevEl: '.main-banner-prev',
            },
        });
    </script>
    <script>
        $(document).ready(function() {
            // Add to cart functionality
            $('.add-to-cart, .add-to-cart-btn').click(function(e) {
                e.preventDefault();
                var $this = $(this);
                var slug = $this.data('slug');
                var quantity = $this.data('quantity') || 1;

                $.ajax({
                    url: '@Url.Action("AddToCart", "Cart")',
                    type: 'POST',
                    data: { slug: slug, quantity: quantity },
                    success: function(result) {
                        if (result.success) {
                            Toastify({
                                text: result.message,
                                duration: 3000,
                                close: true,
                                gravity: "top",
                                position: "right",
                                style: { background: "#28a745" }
                            }).showToast();
                        } else {
                            Toastify({
                                text: result.message,
                                duration: 3000,
                                close: true,
                                gravity: "top",
                                position: "right",
                                style: { background: "#dc3545" }
                            }).showToast();
                        }
                    },
                    error: function() {
                        Toastify({
                            text: 'Có lỗi xảy ra khi thêm sản phẩm vào giỏ hàng.',
                            duration: 3000,
                            close: true,
                            gravity: "top",
                            position: "right",
                            style: { background: "#dc3545" }
                        }).showToast();
                    }
                });
            });

            // Format price inputs
            $('#minPrice, #maxPrice').on('input', function() {
                var value = $(this).val().replace(/[^0-9]/g, '');
                if (value) {
                    $(this).val(parseInt(value).toLocaleString('vi-VN'));
                }
            });
        });
    </script>
}

