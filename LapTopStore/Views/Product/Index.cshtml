@{
    ViewData["Title"] = "Sản phẩm";
}
@model LapTopStore.Models.ViewModels.PagedProductListVM
@using System.Globalization

<!-- Banner Section for Product Page - Full Width at Top -->
@if (ViewBag.Banners != null)
{
    var banners = ViewBag.Banners as List<Slider>;
    if (banners != null && banners.Any())
    {
        <div class="product-main-banner-section">
            <div class="swiper-container main-banner-slider">
                <div class="swiper-wrapper">
                    @foreach (var banner in banners)
                    {
                        <div class="swiper-slide">
                            <div class="main-banner-item">
                                <img src="@Url.Content("~/Images/" + banner.HinhAnh)"
                                     alt="@banner.TieuDe" class="main-banner-image">
                                @if (!string.IsNullOrEmpty(banner.TieuDe) || !string.IsNullOrEmpty(banner.MoTa))
                                {
                                    <div class="main-banner-overlay">
                                        <div class="banner-content">
                                            @if (!string.IsNullOrEmpty(banner.TieuDe))
                                            {
                                                <h2 style="color:white" class="main-banner-title">@banner.TieuDe</h2>
                                            }
                                            @if (!string.IsNullOrEmpty(banner.MoTa))
                                            {
                                                <p class="main-banner-description">@banner.MoTa</p>
                                            }
                                            @if (!string.IsNullOrEmpty(banner.Link))
                                            {
                                                <a href="@banner.Link" class="btn btn-golden btn-lg">Khám Phá Ngay</a>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
                <div class="swiper-pagination main-banner-pagination"></div>
                <div class="swiper-button-next main-banner-next"></div>
                <div class="swiper-button-prev main-banner-prev"></div>
            </div>
        </div>
    }
}

<!-- Compact Breadcrumb Section - Left Corner -->
